public class Solution {  

    public static int pairSum(int arr[], int x) {
    	int numberPairs = 0;
        for (int i = 0; i < arr.length; i++) {
            for (int j = i + 1; j < arr.length; j++) {
                    if (arr[i] + arr[j] == x) {
                        numberPairs++;
                    }
                }
            }
        
        return numberPairs;
    }
}
